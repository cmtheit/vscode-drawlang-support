{
    "name": "drawerlang-support",
    "displayName": "DrawerLang",
    "description": "%description%",
    "version": "1.0.0",
    "publisher": "cmtheit",
    "engines": {
        "vscode": "^1.50.0"
    },
    "icon": "images/drawerlogo.png",
    "galleryBanner": {
        "color": "#FFB13B",
        "theme": "light"
    },
    "keywords": [
        "drawer",
        "drawerlang",
        "previewer"
    ],
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onCommand:custom-preview.openPreview"
    ],
    "nx": {
        "namedInputs": {
            "extensionSrc": [
                "{projectRoot}/src"
            ]
        },
        "targets": {
            "build": {
                "dependsOn": [
                    "^build"
                ],
                "inputs": [
                    "extensionSrc"
                ],
                "outputs": [
                    "{projectRoot}/out"
                ]
            }
        }
    },
    "contributes": {
        "commands": [
            {
                "command": "drawer.preview",
                "title": "%drawer.preview.title%",
                "icon": "$(open-preview)",
                "enablement": "!config.drawer.preview.disable"
            },
            {
                "command": "_drawer.previewByUri",
                "title": "%drawer.preview.title%",
                "icon": "$(open-preview)",
                "enablement": "!config.drawer.preview.disable"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "drawer.preview",
                    "when": "editorLangId == drawer && !config.drawer.preview.disable",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "command": "_svg.minifySvg",
                    "when": "editorLangId == svg",
                    "group": "2"
                },
                {
                    "command": "svg.copyDataUri",
                    "group": "2",
                    "when": "resourceLangId == svg"
                }
            ],
            "explorer/context": [
                {
                    "command": "_svg.showSvgByUri",
                    "when": "resourceLangId == svg && !config.svg.preview.disable",
                    "group": "navigation"
                },
                {
                    "command": "_svg.minifySvgToFile",
                    "when": "resourceLangId == svg && !config.svg.preview.disable",
                    "group": "1_modification"
                }
            ]
        },
        "configuration": {
            "title": "%configuration.title%",
            "properties": {
                "drawer.preview.disable": {
                    "title": "Disable Preview",
                    "description": "If you just want use other previewer",
                    "type": "boolean",
                    "default": false
                },
                "drawer.preview.autoShow": {
                    "title": "Auto Show Preview",
                    "description": "Auto show preview on side when a SVG document open",
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "languages": [
            {
                "id": "drawer",
                "aliases": [
                    "Drawer",
                    "drawerlang"
                ],
                "configuration": "./drawer.language-configuration.json",
                "extensions": [
                    ".drawer"
                ],
                "icon": {
                    "light": "images/drawerFileIcon.svg",
                    "dark": "images/drawerFileIcon.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "drawer",
                "scopeName": "text.drawer",
                "path": "syntaxes/draw.json"
            }
        ]
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/cmtheit/vscode-drawlang-support"
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "build": "cp -r drawerlang/src/drawer/parser/ts src/parser/ && webpack --mode development && mkdir -p out/assets && cp -r webview/dist/* out/",
        "update-vscode": "vscode-install"
    },
    "dependencies": {
        "antlr4": "^4.13.2",
        "color": "^4.2.3",
        "drawerlang": "*",
        "mathjs": "^14.0.0",
        "@vds/webview": "*"
    },
    "workspaces": [
        "drawerlang",
        "webview"
    ],
    "devDependencies": {
        "@types/color": "^4.2.0",
        "@types/mocha": "^5.2.0",
        "@types/node": "^8.0.0",
        "@types/offscreencanvas": "^2019.6.4",
        "@types/svgo": "^1.3.0",
        "@types/vscode": "1.50.0",
        "concurrently": "^7.4.0",
        "copy-webpack-plugin": "^10.2.4",
        "lerna": "^8.1.9",
        "raw-loader": "^4.0.2",
        "ts-loader": "^9.4.2",
        "tslint": "^5.16.0",
        "typescript": "^5",
        "vite": "^5.4.11",
        "vscode-test": "1.5.2",
        "webpack": "^5.76.0",
        "webpack-cli": "^4.9.2"
    }
}