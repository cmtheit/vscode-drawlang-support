{
  "scopeName": "text.drawer",
  "name": "drawer",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.drawer",
          "match": "//.*$"
        },
        {
          "name": "comment.line.double-dash.drawer",
          "match": "--.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.drawer",
          "match": "(?i:\\b(origin|is|rot|scale|for|from|to|step|draw|color)\\b)"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.drawer",
          "match": "\\b([1-9][0-9]*|0)(\\.[0-9]+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.drawer",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.parameter.drawer",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "fileTypes": [
    "drawer"
  ],
  "uuid": "unique-id-for-drawer-syntax"
}